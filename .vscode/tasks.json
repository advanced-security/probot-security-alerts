{
    "version": "2.0.0",
    "tasks": [
       {
        "label": "Install Dependencies",
        "command": "yarn",
        "args": ["install"],
        "group": {
            "kind": "build",
            "isDefault": false
        }
       },
       {
        "label": "Build",
        "command": "yarn",
        "args": ["run", "build"],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "dependsOn":[ "Install Dependencies" ]
       },
       {
        "label": "Setup Lambda Env",
        "options": {
            "cwd": "${workspaceRoot}/packages/aws"
        },
        "command": "yarn",
        "args": ["run", "copyEnv"],
        "group": {
            "kind": "build",
            "isDefault": false
        }
       },
       {
        "label": "Test",
        "command": "yarn",
        "args": ["run", "test"],
        "group": {
            "kind": "test",
            "isDefault": true
        },
        "dependsOn":[ "Build" ]
       },
       {
        "type": "func",
        "label": "func: host start",
        "options": {
            "cwd": "${workspaceRoot}/azure"
        },
        "command": "host start",
        "problemMatcher": "$func-node-watch",
        "isBackground": true,
        "dependsOn": "npm install (functions)"
      },
      {
        "label": "Run hadolint",
        "command": "hadolint",
        "args": ["--no-fail", "${workspaceFolder}/server/Dockerfile"],
        "problemMatcher": {
          "owner": "dockerfile",
          "fileLocation": ["absolute"],
          "pattern": {
            "regexp": "^([^:]+)\\:(\\d+) ((?:DL|SC)\\d{4}) ([^:]+): (.*)$",
            "file": 1,
            "line": 2,
            "code": 3,
            "severity": 4,
            "message": 5
          }
        }
       }
    ]
}
